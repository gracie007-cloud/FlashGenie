{
  "name": "flashcardai-server",
  "version": "1.0.0",
  "description": "Backend server for FlashGenie",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
